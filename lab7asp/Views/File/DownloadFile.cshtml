@{
  ViewData["Title"] = "Download file";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewData["Title"]</title>
  <style>
    body {
      font-family: sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
            background-color: #8DDFE5;
        }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      color: #333; 
    }

    label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: bold;
    }

    .form-text {
      color: #888; 
    }

    form {
      width: 300px; 
      padding: 2rem;
      border-radius: 5px;
      background-color: #fff; 
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); 
    }

    .form-group {
      margin-bottom: 1rem;
    }

    .form-control {
      display: block;
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #ccc; 
      border-radius: 3px;
    }

    .btn-primary {
      display: block;
      width: 100%;
      padding: 1rem;
      font-size: 1rem;
      color: #fff;
            background-color: #139417;
            border: none;
      border-radius: 3px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="container">
    <form method="post">
      <div class="form-group">
        <label for="name">Enter your name</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="surname">Enter your surname</label>
        <input type="text" class="form-control" id="surname" name="surname" required>
      </div>
      <div class="form-group">
        <label for="filename">Enter filename</label>
        <input type="text" class="form-control" id="filename" name="filename" required>
        <small class="form-text text-muted">This file will contain information about you (name/surname)</small>
      </div>
      <button type="submit" class="btn-primary">Continue</button>
    </form>
  </div>
</body>
</html>